<%= form_with( url: '/sessions', method: :post ) do | form | %>
    <div class="form-group">
        <%= form.label "Email" %>
        <%= form.text_field :email %>
    </div>
     <div class="form-group">
        <%= form.label "Password" %>
        <%= form.password_field :password %>
    </div>
    <%=form.select :user_type, @users.collect {|p| [p] }, { include_blank: "Please choose user type" }%>
    <%= form.submit %>
<% end %>