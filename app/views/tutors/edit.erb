<br><br><br><br>
<%= form_with( model: @tutor ) do | form | %>
<center><h1 style="color:red;">Edit Your Page</h1><center>
    <div>
        <%= form.label "Name" %>
        <%= form.text_field :name %>
    </div>
    <div>
        <%= form.label "Subject" %>
        <%= form.collection_select(:subject_id, Subject.all,:id,:name,prompt: true) %>
    </div>
    <div>
        <%= form.label "Level" %>
        <%= form.collection_select(:level_id, Level.all,:id,:name,prompt: true) %> 
    </div>
     
    <div>
        <%= form.label "Bio" %>
        <%= form.text_area :bio %>
    </div>
    <%= form.submit :class => 'btn btn-danger' %>
<% end %>



